<script>
    function calculateCountdown() {
        // è¨­å®šç›®æ¨™æ—¥æœŸ
        const target = new Date('2027-01-16T00:00:00');
        const now = new Date();
        
        // å–å¾—ç´”æ—¥æœŸç‰©ä»¶
        const today = new Date(now.getFullYear(), now.getMonth(), now.getDate());
        const targetDay = new Date(target.getFullYear(), target.getMonth(), target.getDate());
        
        const diffTime = targetDay - today;
        const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
        
        const display = document.getElementById('days-val');
        
        if (diffDays > 0) {
            display.innerText = diffDays;
        } else if (diffDays === 0) {
            display.innerText = "NOW";
            document.querySelector('.unit-label').innerText = "è€ƒè©¦ç•¶å¤©";
        } else {
            display.innerText = "END";
            document.querySelector('.unit-label').innerText = "é‡‘æ¦œé¡Œå";
        }
    }

    calculateCountdown();
</script>

